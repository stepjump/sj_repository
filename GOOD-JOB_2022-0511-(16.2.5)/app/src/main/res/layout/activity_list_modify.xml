<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.stepjump.goodjob.ListModifyActivity"
    tools:showIn="@layout/activity_list_modify"
    android:orientation="vertical">

    <ListView
        android:id="@+id/listview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:choiceMode="singleChoice" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_listno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="리스트 번호"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#009688" />

        <TextView
            android:id="@+id/listno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center"
            android:background="#CBCCCB"
            android:textStyle="bold"
            android:hint="번호" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="수입금액(원)"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#009688" />

        <EditText
            android:id="@+id/edit_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:inputType="numberDecimal"
            android:hint="수입금액" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_active_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="착한일 이름"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="#009688" />

        <EditText
            android:id="@+id/edit_active_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:inputType="textMultiLine"
            android:hint="착한일 이름 입력" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
        android:id="@+id/btn_back"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:background="#3F51B5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_weight="5"
        android:text="돌아가기" />

        <Button
            android:id="@+id/btn_new"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:background="#4CAF50"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:text="신규" />

        <Button
            android:id="@+id/btn_save"
            android:textColor="#000000"
            android:textSize="20dp"
            android:background="#FFC107"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:text="저장하기" />

        <Button
            android:id="@+id/btn_delete"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:background="#FF5722"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="5"
            android:text="삭제하기" />

    </LinearLayout>

</LinearLayout>